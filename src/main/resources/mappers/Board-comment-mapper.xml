<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardComment">

<insert id="insert" parameterType="com.kedu.project.dto.BoardCommentDTO">
  insert into board_comment values(board_comment_seq.nextval,#{parent_seq},#{writer_id},#{comments},sysdate)
</insert>

<!-- BoardComment List  -->
<select id="getComments" resultType="com.kedu.project.dto.BoardCommentDTO" parameterType="int">
select * from board_comment where parent_seq = #{parent_seq}
</select>

<!-- BoardComment Delete  -->
<delete id="deleteComment" parameterType="int">
	delete from board_comment where seq = #{seq}
</delete>
	
</mapper>